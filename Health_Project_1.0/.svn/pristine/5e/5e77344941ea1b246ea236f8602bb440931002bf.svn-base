@charset "UTF-8";
*{
    margin: 0;
    padding:0;
    box-sizing: border-box;    
    list-style: none;
}
/* 나중에 지워야함 */
.introduce{
	position: absolute;
	left:50%;
	top:30px;
	transform:translateX(-50%);
}
body{
    width: 100vw;
    overflow: scroll;

    -ms-overflow-style: none;
    scrollbar-width: none;
}
body::-webkit-scrollbar {
    display: none; 
}
.full{
    position: absolute;
    width: 100%;
    padding-top:100px;
    display: flex;
    justify-content: center;
}
.inner{
    width: 70vw;
    
}
.top{
    width: 100%;
    height: 250px;
    border: 1px solid #26292d;
    display: flex;
    justify-content: space-between;
    padding:20px
}
.topinner{
    flex: 1;
    height: 100%;
    border: 3px solid #26292d;
    border-radius:10px;
    transition: all .3s;
    cursor: pointer;
    text-align: center;
    padding-top:80px
}
.topinner:hover{
    transform: translateY(15px);
}
.ti01, .ti02, .ti03{
    margin-right: 25px;
}
.searchBox{
	width: 100%;
	height: 80px;
	display: flex;
	align-items: center;
	justify-content: center;
}
#search{
	width: 500px;
	height: 50px;
	border: 3px solid green;
	border-radius: 18px;
	outline: none;
	padding:0 13px;
	font-weight:500;
	font-size:18px;
	background: url('../img/util/search.png');
	background-position: right;
	background-repeat: no-repeat;
	background-size: 25px;
	background-origin: content-box;
}

.list{
	margin:0 auto;
	display: flex;
	flex-wrap: wrap;
	border: 1px solid red;
}
.item{
	width: 220px;
	height: 300px;
	border: 5px solid black;
	border-radius: 10px;
	margin: 20px;
}