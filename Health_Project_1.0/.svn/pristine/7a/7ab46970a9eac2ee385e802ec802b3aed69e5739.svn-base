@charset "UTF-8";
*{
    margin: 0;
    padding:0;
    box-sizing: border-box;    
    list-style: none;
}
body{
    width: 100vw;
    height: 100vh;
}
.full{
    position: absolute;
    width: 100%;
    height: 100%;
    padding-top:100px;
    display: flex;
    justify-content: center;
    background-color: #f3f3f3;
}
.main{
    width: 70vw;
    height: 100%;
    border: 1px solid black;
    display: flex;
    justify-content: space-between;
}
.left{
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.img{
    width: 100%;
    height: 100%;
}
.img img{
	width: 100%;
	height: 100%;
}
.right{
    width: 50%;
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 25px;
}
.inner{
    flex: 1;
    border: 3px solid black;
    border-radius:10px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition:all .3s;
    cursor: pointer;
}
.top, .middle{
    margin-bottom: 20px;
}
.inner:hover{
    transform:translateX(-20px)
}